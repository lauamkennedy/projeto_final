<?php 
session_start();
require "admin/config.inc.php";

if($_SERVER["REQUEST_METHOD"] == "POST") {
    $marca = mysqli_real_escape_string($conexao, $_POST['marca']);
    $modelo = mysqli_real_escape_string($conexao, $_POST['modelo']);
    $ano = (int)$_POST['ano'];
    $valor = (float)$_POST['valor'];

    $sql = "INSERT INTO veiculos (marca, modelo, ano, valor) VALUES (?, ?, ?, ?)";
    $stmt = mysqli_prepare($conexao, $sql);
    mysqli_stmt_bind_param($stmt, "ssid", $marca, $modelo, $ano, $valor);

    if (mysqli_stmt_execute($stmt)) {
        $_SESSION['mensagem'] = "‚úÖ Ve√≠culo cadastrado com sucesso!";
        $_SESSION['tipo'] = "sucesso";
        header("Location: " . $_SERVER['PHP_SELF']);
        exit;
    } else {
        $_SESSION['mensagem'] = "‚ùå Erro ao salvar: " . mysqli_error($conexao);
        $_SESSION['tipo'] = "erro";
    }
    mysqli_stmt_close($stmt);
}

$resultado = mysqli_query($conexao, "SELECT * FROM veiculos ORDER BY id DESC");
$veiculos = mysqli_fetch_all($resultado, MYSQLI_ASSOC);
?>
